/* pages/idel-detail/idel-detail.wxss */
.main-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.top-view {
  display: flex;
  flex-direction: row;
  width: 90%;
  height: 108rpx;
  align-items: center;
}

.avatar {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid;
  border-color: #346cd1;
}

.top-text-view {
  display: flex;
  flex-direction: column;
  width: 600rpx;
  margin-left: 30rpx;
}

.divider {
  width: 95%;
  height: 1px;
  background-color: #276DED;
}

.content {
  display: flex;
  flex-direction: column;
  width: 90%;
}

.photo {
  width: 100%;
  margin-top: 20rpx;
}

.bottom-view {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  background-color: #FAFAFA;
  justify-content: space-between;
}

.contact-button {
  margin-right: 50rpx;
  width: 300rpx;
  height: 60rpx;
  background-color: #276DED;
  color: #fff;
}

.divider2{
  width: 750rpx;
  background-color: #818181;
  height: 1px;
}

.comment{
  color:#276DED ;
}