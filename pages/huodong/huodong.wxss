/* pages/huodong/huodong.wxss */
.mainView{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100%
}

.main{
    /* position: absolute; */
    z-index: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.window{
    position: fixed;
    z-index: 2;
    width: 644rpx;
    height: 748rpx;
    margin-top: 96rpx;
    background-color: white;
    border-radius: 30rpx;
    line-height: 33rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 0;
}

.window-bg{
    position: fixed;
    z-index: 1;
    width: 100%;
    height: 100%;
    background-color: rgba(142, 174, 229, 0.65);
    opacity: 0;
}

.card{
    border-radius: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 20rpx;
}

.bg{
    z-index: 0;
    width: 644rpx;
    height: 210rpx;
}

.text{
    position: absolute;
    color: white;
    font-size: 46rpx;
    z-index: 1;
}

.banner{
    width: 644rpx;
    height: 362rpx;
}

.banner-img{
    width: 100%;
    border-radius: 30rpx 30rpx 0 0;
}

.banner-text{
    width: 90%;
    margin-top: 66rpx;
    font-size: 28rpx;
}

.card-hover{
    transform: scale(0.9,0.9)
}