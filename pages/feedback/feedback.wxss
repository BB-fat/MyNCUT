.topView{
  position: absolute;
  z-index: 0;
  width: 100%;
  height: 1200rpx; 
}

.txtareaStyle {  
  margin: auto;  
  margin-top: 46rpx;
  margin-bottom: 60rpx;
  border: 5rpx solid rgba(160, 153, 153, 0.384);
  border-radius: 10px;
  font-size: 35rpx;
  color: #000000;
  width: 87%; 
  box-shadow:0px 0px 10px #AAA;
   /* background-color: #084feb; */
}
.txtareaStyle:after {
    position: absolute;
    content: '';
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    box-shadow:0 0 50px 25px #ffffff inset;
}

.numStyle {
  display: flex;
  justify-content: flex-end;
  padding-right:25rpx ;
  font-size: 30rpx;
  color: #afb4bd;
}
.mytxtarea{
  width: 94%;
  margin-left: 20rpx;
  margin-top: 20rpx;  
  /* background-color: #61749c; */
}
.myplaceholder { 
  color:#afb4bd;
  font-size: 35rpx; 
}
.typeTitle{
  width: 80%;
  display: flex;
  margin:0 auto;
  justify-content: left;  
  /* background-color:  #b80842; */
  font-size: 35rpx;
  color: #96989c;
}
.pickerView{
  display: flex;
  justify-content: center;   
  margin: 0 auto;
  /* background-color: #0690be; #f1fbff;*/
}

.picker {  
  background-color: #f2fcff;
  width: 65%;
  height: 300rpx;
  box-shadow:0 0 50px 30px #ffffff inset;
}


.indicator {
  height: 100rpx;
  border-top: 1px solid rgb(243, 243,243);
  border-bottom: 1px solid  rgb(243, 243,243);
}

.column {
  font-size: 35rpx;
  color: #0a0a0a;
  text-align: center;
  line-height: 100rpx;
}

.btns{
  height: 100rpx;
  width: 87%;
  /* margin: 110rpx 50rpx 0rpx 50rpx;   */
  /* background-color: #faf9f9; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 0 auto;
  margin-top:110rpx;
}
.btn{   
  /* position: absolute; */
  width:267rpx;
  height: 83rpx;
  border-radius: 22rpx;
  background-color: #93cee5;
  font-size: 35rpx;
  color: #ffffff;
  box-shadow: 0rpx 0rpx 10rpx 0rpx #a7a7a7;
}
.btnhover {
  background-color: #ebe7e7;
  border-radius: 20rpx;
  opacity: 0.8;
  transform: scale(0.9,0.9);
}

.words{
  width: 100%;
  height: 1200rpx;
  background-color: #ffffff;
  position: absolute;
  z-index: 1;
  display: flex;
  flex-direction: column;
  vertical-align: center;
  align-items: center; 
  justify-content: center;
  color: #6299ff;
  font-size: 35rpx;
  font-weight: bold;
}

.img{
  height: 322rpx;
  width: 462rpx;
}