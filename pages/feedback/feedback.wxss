.txtareaStyle {
  margin: 46rpx 0rpx 60rpx 45rpx;
  border: 5rpx solid rgba(160, 153, 153, 0.384);
  border-radius: 10px;
  font-size: 35rpx;
  color: #000000;
  width: 656rpx; 
  box-shadow:0px 0px 10px #AAA;
   /* background-color: #084feb; */
}
.numStyle {
  display: flex;
  justify-content: flex-end;
  padding: 1%;
  font-size: 30rpx;
  color: #c0c6d3;
}
.mytxtarea{
  width: 97%;
  margin-left: 10rpx;
  margin-top: 10rpx;  
  /* background-color: #084feb; */
}
.myplaceholder {
  color:#c0c6d3;
  font-size: 35rpx;
}
.typeTitle{
  margin-left: 50rpx;
  text-align : left;
  font-size: 35rpx;
  color: #6299ff;
}
.pickerView{
  display: flex;
  justify-content: center;   
  margin: 0 auto;
  /* background-color: #0690be; */
}
.picker {  
  background-color: #f1fbff;
  width: 80%;
  height: 300rpx;
}

.indicator {
  height: 100rpx;
  border-top: 1px solid rgb(243, 243,243);
  border-bottom: 1px solid  rgb(243, 243,243);
}

.column {
  font-size: 35rpx;
  color: #6299ff;
  text-align: center;
  line-height: 100rpx;
}

.btns{
  height: 100rpx;
  margin: 110rpx 50rpx 0rpx 50rpx;  
  /* background-color: #faf9f9; */
  display: flex;
  flex-direction: row;
}
.btn{   
  /* position: absolute; */
  width:267rpx;
  height: 83rpx;
  border-radius: 22rpx;
  background-color: #9d5fe4;
  font-size: 35rpx;
  color: #ffffff;
  box-shadow: 0rpx 0rpx 10rpx 0rpx #a7a7a7;
}
.btnhover {
  background-color: #ebe7e7;
  border-radius: 20rpx;
  opacity: 0.8;
  transform: scale(0.9,0.9);
}
