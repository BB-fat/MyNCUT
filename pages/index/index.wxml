<swiper class="picswiper" previous-margin="40rpx" next-margin="40rpx"  indicator-dots="{{indidots}}" indicator-color="{{idcolor}}" current="{{pic_curPage}}" autoplay="{{autoplay}}" circular="{{circular}}" interval="{{interval}}" duration="{{duration}}" >
    <block wx:for="{{imgitem}}" >
        <swiper-item class='pic_item'>
            <navigator url="{{item.link}}" hover-class="navigator-hover0">  
                <image src='{{item.imgUrl}}' class="swiper_img" ></image>
            </navigator>   
        </swiper-item>
    </block>
</swiper>

<view class="notice">   
    <view >  <image src="{{notice}}" class="notice_img"></image>  </view>
    <view style="flex:1;"> 
        <swiper  class="wordswiper"  current="{{word_curPage}}" autoplay="true" circular="true" interval="2000" duration="1000" vertical='true'> 
            <block wx:for="{{worditem}}" >     
              <swiper-item class='word_item'>
                <navigator url="{{item.link}}" hover-class="navigator-hover1">  
                  <text>{{item.txt}}</text>
                </navigator>   
              </swiper-item>  
            </block>          
        </swiper>  
    </view>
</view>

