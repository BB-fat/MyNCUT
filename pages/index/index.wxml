<import src="../../templates/buttons_h/buttons_h.wxml" />
<import src="../../templates/buttons_v/buttons_v.wxml" />

<swiper class="picswiper" previous-margin="40rpx" next-margin="40rpx" indicator-dots="{{indidots}}" indicator-color="{{idcolor}}"  autoplay="{{autoplay}}" circular="{{circular}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{indexBanner}}">
    <swiper-item class='pic_item'>      
      <view hover-class="navigator-hover">
        <image src='{{item.imgUrl}}' class="swiper_img" mode='scaleToFill' data-index='{{index}}' bindtap='swipclick' ></image>
      </view>     
    </swiper-item>
  </block>
</swiper>

<view class="notice">
  <view>
    <image src="{{notice}}" class="notice_img"></image>
  </view>
  <view style="flex:1;">
    <swiper class="wordswiper"  autoplay="true" circular="true" interval="2000" duration="1000" vertical='true'>
      <block wx:for="{{indexNotice}}">
        <swiper-item class='word_item'>
          <text>{{item.text}}</text>
        </swiper-item>
      </block>
    </swiper>
  </view>
</view>

<view class="shang"> 
  <template is="myBtn_h" data="{{...btn1}}" />
  <template is="myBtn_h" data="{{...btn2}}" />
</view>

<view class="xia"> 
  <template is="myBtn_h" data="{{...btn3}}" />
  <template is="myBtn_v" data="{{...btn4}}" />
  <template is="myBtn_v" data="{{...btn5}}" />  
</view>