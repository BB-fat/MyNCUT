<import src="../../templates/authView/authView.wxml" />
<import src="../../templates/myButton/myButton.wxml" />


<view wx:if="{{disable}}" class='disableView'>
  <text class='disableText'>你已被禁用</text>
</view>

<template wx:elif="{{!authed}}" is="authView"></template>
<view wx:else>
  <swiper class="picswiper" previous-margin="40rpx" next-margin="40rpx" autoplay="true" circular="true" interval="4000">
    <block wx:for="{{indexBanner}}">
      <swiper-item class='pic_item'>
        <navigator hover-class="banner-hover" url="{{'../webview/webview?mode=normal&url='+item.msgurl}}">
          <image src='{{item.imgurl}}' class="swiper_img" mode='scaleToFill' data-index='{{index}}' bindtap='swipclick'></image>
        </navigator>
      </swiper-item>
    </block>
  </swiper>

  <view class="notice">
    <view>
      <image src="/img/index/notice.svg" class="notice_img"></image>
    </view>
    <view style="flex:1;">
      <swiper class="wordswiper" autoplay="true" circular="true" interval="4000" vertical='true'>
        <block wx:for="{{indexNotice}}">
          <swiper-item class='word_item'>
            <text>{{item.text}}</text>
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>

  <view class="button-view">
    <template is="indexBtn" data="{{...btn_kebiao}}" />
    <template is="indexBtn" data="{{...btn_jiaoshi}}" />
    <template is="indexBtn" data="{{...btn_chengji}}" />
  </view>
  <view class="button-view">
    <template is="indexBtn" data="{{...btn_jidian}}" />
    <template is="indexBtn" data="{{...btn_xuefen}}" />
    <template is="indexBtn" data="{{...btn_gengduo}}" />
  </view>

</view>