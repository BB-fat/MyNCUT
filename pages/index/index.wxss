@import "../../templates/authView/authView.wxss";
@import "../../templates/myButton/myButton.wxss";

.disableView{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 100;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #111;
}

.disableText{
  font-size: 50rpx;
  color: #fff
}

.picswiper {
  padding: 0rpx 0rpx 0rpx 0rpx;
  width: 100%;
  height: 430rpx;
  background-color: #ffffff;
}

.pic_item {
  padding-top: 10rpx;
  background-color: #ffffff;
  height: 430rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper_img {
  background-color: #ffffff;
  width: 640rpx;
  height: 386rpx;
  border-radius: 20px;
  box-shadow: 0px 4px 30px 0px rgb(225, 225, 226);
}

.notice {
  height: 50rpx;
  padding: 0rpx 120rpx 0rpx 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.notice image {
  width: 26rpx;
  height: 23rpx;
}

.notice .wordswiper {
  width: 100%;
  height: 50rpx;
  padding: 0 0 0 30rpx;
}

.notice .wordswiper text {
  font-size: 30rpx;
  color: #000000;
}

.banner-hover {
  border-radius: 200rpx;
  opacity: 0.9;
  transform: scale(1.04, 1.04);
}

.button-view{
  display:flex;
  flex-direction: row;
  justify-content: space-around;
}