.picswiper {
  padding:0rpx 0rpx 0rpx 0rpx;  /*上  右  下  左;*/
  width: 100%;
  height: 430rpx;  
  background-color:  #6299ff;
}

.pic_item {  
  padding-top: 10rpx;    
  background-color:#6299ff;
  height: 430rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper_img {  
  background-color: #6299ff;
  width: 640rpx;
  height: 386rpx;
  border-radius:20px;
  /* -webkit-filter: blur(0.5px); */
  box-shadow: 0px 0px 10px 0px rgb(148, 193, 223) ;
}

.notice{
  height: 50rpx;
  padding: 0rpx 120rpx 0rpx 120rpx;
  /* margin-top: 40rpx; */
  background-color:#6299ff;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}
.notice image{  
  width:26rpx;
  height: 23rpx;
  background-color:#6299ff;
}
.notice .wordswiper { 
  width: 100%;
  height: 50rpx;  
  padding: 0 0 0 30rpx; 
  background-color:  #6299ff;
}
.notice .wordswiper text{
  font-size: 30rpx;  
  color: #ffffff;
}

