.centerView {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mainView {
  position: absolute;
  z-index: 1;
}

.course {
  background-color: #FAFAFA;
  width: 586rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-radius: 8px;
  padding: 22rpx 50rpx 1rpx 50rpx;
  box-shadow: 0rpx 6rpx 12rpx rgba(0, 0, 0, 0.2);
}

.divider {
  margin-top: 30rpx;
  height: 1px;
  background-color: #276DED;
  width: 646rpx;
  align-self: center;
}

.course-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.course-top-img {
  display: flex;
  justify-content: center;
  align-items: center;
}

.teacher {
  color: rgba(188, 188, 188, 1);
  font-size: 25rpx;
  font-weight: bold;
}

.class {
  color: rgba(188, 188, 188, 1);
  font-size: 25rpx;
  font-weight: bold;
}

.line {
  margin-top: 30rpx;
  height: 3rpx;
  width: 100%;
}

.course-bottom {
  height: 75rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 35rpx;
  font-size: 35rpx;
}

.wordhover {
  border-radius: 20rpx;
  transform: scale(0.95, 0.95);
}

.imghover {
  border-radius: 20rpx;
  transform: translate(0px, -3px);
}

.myfavor {
  position: fixed;
  z-index: 10;
  width: 180rpx;
  height: 180rpx;
  bottom: 30rpx;
  right: 30rpx;
}