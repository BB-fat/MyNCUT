@import "../../templates/myButton/myButton.wxss";

.mainView {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  border-radius: 8px;
  box-shadow: 0px 0px 20px 0px rgba(218, 222, 226, 0.5);
  width: 686rpx;
  height: 204rpx;
  background-color: #fff;
  color: rgb(0, 0, 0);
}

.cardView {
  position: absolute;
  z-index: 1;
  width: 650rpx;
  display: flex;
  flex-direction: row;
}

.cardViewLeft {
  margin-left: 38rpx;
  margin-top: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cardViewMid {
  margin-left: 80rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  font-weight: bold;
}

.button-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.row0 {
  margin-top: 60rpx;
}

.row1 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width:686rpx;
  margin-top: 50rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  font-weight: lighter;
}

.row2 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  margin-top: 100rpx;
}

.card-avata {
  height: 144rpx;
  width: 144rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 7rpx solid;
  border-color: #346cd1;
}

.card-name {
  font-size: 34rpx;
  line-height: 44rpx;
  font-weight: normal;
  margin-right: 20rpx;
}

.card-male {
  margin-top: 15rpx;
  height: 25rpx;
  width: 26rpx;
}

.card-female {
  margin-top: 15rpx;
  height: 26rpx;
  width: 17rpx;
}

.card-userid {
  margin-top: 15rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  font-weight: normal;
}

.card-class {
  margin-top: 15rpx;
  font-size: 25rpx;
}

.wifiView {
  position: relative;
  margin-top: 15rpx;
  z-index: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 686rpx;
  height: 80rpx;
  background-color: #FAFAFA;
  border-radius: 8px;
}

.leftWifi {
  position: absolute;
  z-index: 1;
  left: 190rpx;
  font-size: 14rpx;
  color: #FAFAFA;
}

.wifiView image {
  width: 30.46rpx;
  height: 37.12rpx;
  margin-right: 25rpx;
  margin-left: -20rpx;
  padding-left: 10rpx;
}

.wifiView .tips {
  font-weight: lighter;
  margin-right: 20rpx;
  font-size: 22rpx;
  line-height: 30rpx;
}

.wifiProgress {
  width: 70%;
}

.picture{
  position: fixed;
  margin-top: 50rpx;
  width: 100%;
  height: 500.72rpx;
  bottom: -50rpx;
}

