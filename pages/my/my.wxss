.mainView {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
}

.card {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-radius: 8px;
  width: 621rpx;
  height: 118rpx;
  background-color: #FAFAFA;
  padding: 46rpx 46rpx;
}

.cardViewMid {
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-around;
}

.card-avata {
  height: 144rpx;
  width: 144rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 7rpx solid;
  border-color: #346cd1;
}

.card-name {
  font-size: 34rpx;
  line-height: 44rpx;
  font-weight: normal;
  margin-right: 20rpx;
}

.card-male {
  margin-top: 15rpx;
  height: 25rpx;
  width: 26rpx;
}

.card-female {
  margin-top: 15rpx;
  height: 26rpx;
  width: 17rpx;
}

.wifiView {
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 593rpx;
  height: 108rpx;
  background-color: #FAFAFA;
  border-radius: 8px;
  padding-left: 60rpx;
  padding-right: 60rpx;
}


.button-area {
  margin-top: 50rpx;
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.picture {
  position: fixed;
  width: 100%;
  height: 500.72rpx;
  bottom: 0;
}