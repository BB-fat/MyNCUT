@import "../../templates/myButton/myButton.wxss";

page {
  width: 100%;
  height: 100%;
  background-color: #F4F4F4;
  position: fixed;
}

.mainView {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  position: absolute;
  z-index: 1;
  overflow: hidden;
  box-sizing: border-box;
}

.card {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  border-radius: 8px;
  box-shadow: 0px 0px 20px 0px rgba(218, 222, 226, 0.5);
  width: 686rpx;
  height: 204rpx;
  background-color: #fff;
  color: rgb(0, 0, 0);
}

.cardView {
  position: absolute;
  z-index: 1;
  width: 650rpx;
  display: flex;
  flex-direction: row;
}

.cardViewLeft {
  margin-left: 38rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cardViewMid {
  margin: 60rpx 0 60rpx 80rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  font-weight: bold;
}

.card-avata {
  height: 144rpx;
  width: 144rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 7rpx solid;
  border-color: #346cd1;
  margin-top: -10%;
}

.card-name {
  font-size: 34rpx;
  line-height: 44rpx;
  font-weight: normal;
  margin-right: 20rpx;
}

.card-male {
  margin-top: 15rpx;
  height: 25rpx;
  width: 26rpx;
}

.card-female {
  margin-top: 15rpx;
  height: 26rpx;
  width: 17rpx;
}

.row0 {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  font-weight: normal;
}

.card-userid {
  margin-right: 15rpx;
}

.wifiView {
  position: relative;
  margin-top: 15rpx;
  z-index: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 686rpx;
  height: 80rpx;
  background-color: #FFF;
  border-radius: 8px;
}

.leftWifi {
  position: absolute;
  z-index: 1;
  left: 190rpx;
  font-size: 24rpx;
  color: #111111;
}

.wifiView image {
  width: 30.46rpx;
  height: 37.12rpx;
  margin-right: 25rpx;
  margin-left: -20rpx;
  padding-left: 10rpx;
}

.wifiView .tips {
  font-weight: lighter;
  margin-right: 20rpx;
  font-size: 22rpx;
  line-height: 30rpx;
}

.wifiProgress {
  width: 70%;
}

.button-area {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.row1 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 686rpx;
  margin-top: 50rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  font-weight: lighter;
}

.row1 template {
  box-sizing: border-box;
}

.picture {
  position: fixed;
  width: 100%;
  height: 500.72rpx;
  bottom: 0;
}

.mask {
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.3);
  overflow: hidden;
  z-index: 2;
  position: absolute;
}

.wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 3;
  position: absolute;
}

.container {
  width: 686rpx;
  height: 760rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 3;
  opacity: 0.5;
  border-radius: 8px;
}

.container .cat {
  width: 156rpx;
  height: 172rpx;
  position: absolute;
  right: 10%;
  top: -155rpx;
}

.container .title {
  font-size: 40rpx;
  line-height: 54rpx;
  font-weight: bold;
  position: relative;
  top: 0;
  margin-bottom: 20rpx;
}

.container .message {
  font-size: 34rpx;
  line-height: 44rpx;
  font-weight: lighter;
  margin: 0 20rpx 0 20rpx;
}

.container .message .email {
  color: blue;
}

.btn-row {
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}

.btn-row button {
  width: 270rpx;
  height: 72rpx;
  border-radius: 35rpx;
  color: white;
  margin: 0 20rpx 0 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-row .contact {
  background-color: #60B5F4;
  font-size: 36rpx;
  line-height: 48rpx;
}

.btn-row .close {
  background-color: #276DED;
}