@import "../../templates/myButton/myButton.wxss";
.background-blue {
    position: absolute;
    z-index: 0;
    background-color: rgb(97,154,254);
    width: 100%;
    height: 272rpx;
}

.cardView{
    position: absolute;
    z-index: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.card{
    display: flex;
    flex-direction: column;
    border-radius: 20rpx 20rpx 20rpx 20rpx;
    box-shadow:0px 0px 10px 5px rgba(152, 166, 180, 0.5);
    width: 700rpx;
    height: 400rpx;
    background-color: #fff;
    color: rgb(97,154,254);
}

.card-topView{
    margin-top: 20rpx;
    margin-left: 20rpx;
}

.card-bottomView{
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-top: 50rpx;
}

.card-bottomViewLeft{
    margin-left: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.card-bottomViewMid{
    margin-left: 30rpx;
    display:flex;
    flex-direction: column;
    align-items: flex-start;
}

.button-area {
    position: absolute;
    top: 483rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
}

.column {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 70%;
    margin-top: 50rpx;
}

.card-schoolIcon{
    height: 40rpx;
    width: 200rpx;
    left: 44rpx;
    top: 40rpx;
}

.card-text{
    margin-left: 10rpx;
    margin-bottom: 5rpx;
    font-size: 20rpx;
}

.card-nickName{
    margin-top: 20rpx;
    font-size: 30rpx;
    font-weight: 600;
}

.card-avata{
    height: 144rpx;
    width: 144rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 7rpx solid;
    border-color: #346cd1
}

.card-name{
    margin-top: 15rpx;
    font-size: 35rpx;
    font-weight: 500
}

.card-pic{
    margin-left: 30rpx;
    margin-top: 30rpx;
    height: 214rpx;
    width: 280rpx;
}

.card-male{
    margin-top: 15rpx;
    height: 25rpx;
    width: 26rpx;
}

.card-female{
    margin-top: 15rpx;
    height: 26rpx;
    width: 17rpx;
}

.card-userid{
    margin-top: 15rpx;
    font-size: 25rpx;
}

.card-class{
    margin-top: 15rpx;
    font-size: 25rpx;
}

.footerView{
    position: absolute;
    bottom: 46rpx;
    color: #346cd1;
    font-size: 25rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
}