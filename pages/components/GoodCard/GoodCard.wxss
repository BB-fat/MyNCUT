.sell-view {
  width: 680rpx;
  height: 250rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0rpx 6rpx 12rpx rgba(0, 0, 0, 0.1);

}

.photo {
  height: 250rpx;
  width: 250rpx;
  border-radius: 16rpx 0 0 16rpx;
}

.title{
  font-size: 32rpx;
  margin-top: 16rpx;
}

.price{
 font-size:32rpx;
 color:#276DED;
 margin-top: 30rpx;
}

.content{
  width: 380rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 30rpx;
}

.avatar{
  height: 44rpx;
  width: 44rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid;
  margin-bottom: 30rpx;
  border-color: #346cd1;
}

.own-view{
  display: flex;
  width: 680rpx;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0rpx 6rpx 12rpx rgba(0, 0, 0, 0.1);
}

.state-view{
  width: 90%;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  height: 64rpx;
}

.state-text{
  font-size: 24rpx;
  color: #276DED;
}

.divider{
  width: 95%;
  height: 1px;
  background-color: #276DED;
}

.own-content-view{
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  height: 170rpx;
  align-items: flex-start;
  width: 90%;
  justify-content: space-between;
}

.own-photo{
  width: 128rpx;
  height: 128rpx;
  border-radius: 16rpx;
}

.own-content{
  display: flex;
  flex-direction: column;
}

.time{
  font-size: 24rpx;
  color: #818181;
}

.button-view{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 90%;
  height: 100rpx;
  align-items: flex-start;
}


.button{
  width: 160rpx;
  height: 64rpx;
}