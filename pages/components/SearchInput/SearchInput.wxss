.main-view {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 92rpx;
    width: 100%;
    background-color: #FAFAFA;
}

.border {
    width: 90%;
    height: 73%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    background-color: #FAFAFA;
    border-radius: 65rpx;
    border: 1px solid #276DED;
}

.pic {
    width: 45rpx;
    height: 45rpx;
}

.input {
    width: 90%;
}

.text {
    border-radius: 65rpx;
    color: #FFF;
    height: 100%;
    width: 140rpx;
    background-color: #276DED;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}