.btn{    
  background-color: #ffffff;
  color:#6299ff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center; 
  justify-content: center;  
  font-weight: bold;
  box-shadow: 0rpx 0rpx 20rpx 0rpx #e4e3e3;
}

.btn::after {
  /* border: 100px;  */
  border-color: #ebe7e7;
}

.btnhover {
  background-color: #ebe7e7;
  border-radius: 20rpx;
  opacity: 0.8;
  transform: scale(0.9,0.9);
}
