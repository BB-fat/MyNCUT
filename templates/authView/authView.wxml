<template name="authView">
  <view class='authView'>
    <view class="authView-line">
      Hello,
      <open-data type="userNickName"></open-data>
    </view>
    <text class="line2">欢迎来到“我的北方”</text>
    <image src='https://myncut.oss-cn-beijing.aliyuncs.com/%E6%8F%92%E7%94%BB/131567665716_.pic_hd.jpg' mode='widthFix' class='a'></image>
    <view class='b'>
      <view class="authView-line">
        你需要
        <text style="color: #15DDA8">认证</text> 才能正常使用小程序
      </view>
      <view class='authView-btn' hover="true" hover-class="authView-btnhover" bindtap='toAuth' style="background-color: #FFAA00;">学生认证</view>
      <text class='authView-license' bindtap='seeLicense'>《“我的北方”小程序许可及服务协议》</text>
    </view>
  </view>
</template>